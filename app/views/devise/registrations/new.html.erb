<div class = "container mt-5">
  <h2 class = "row mb-4">ユーザ登録</h2>

  <div class="row">
    <div class="col-lg-6"></div>
    <div class="col-lg-6 border-left">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :name, "ユーザ名" %> <br />
          <%= f.text_field :name, class: "form-control", autofocus: true, maxlength: "60" %>
        </div>

        <div class="field form-group">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
        </div>

        <div class="field form-group">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上 32文字以内)</em>
          <% end %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block mb-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>