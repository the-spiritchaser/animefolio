<!DOCTYPE html>
<html>
  <head>
    <title>AnimeFolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <%# lightbox2のCDN %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">


  </head>

  <body>
    <header class="header">
      <nav class="navbar navbar-expand-lg navbar-light bg-dark border-bottom">
        <%= link_to "AnimeFolio", root_path, class: "navbar-brand text-white" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            
          </ul>
          <% if user_signed_in? %>
            <div class="dropdown">
              <a class="btn btn-transparent dropdown-toggle py-0" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img class="rounded-circle border border-secondary" src="<%= current_user.gravatar_url %>%" alt="Generic placeholder image" width="40" height="40">
              </a>

              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <%= link_to "マイページ", user_path(current_user.id), class: "dropdown-item" %>
                <%= link_to "設定", edit_user_registration_path(current_user.id), class: "dropdown-item"%>
                <%= link_to "投稿する", new_post_path, class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "ログアウト", destroy_user_session_path, class: "dropdown-item", method: :delete %>
              </div>
            </div>
          <% end %>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>
    </header>
    <div class = "container-fulied">
      <%= yield %>
    </div>

    <%# lightbox2のCDN %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript"></script>
    
  </body>
</html>
