<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 p-5 border-right">
      <h2 class = "mb-5">投稿する</h2>
      <%= form_with(model: @post, local: true) do |f| %>
        <div class="form-group">
          
          <%= f.text_field :title, placeholder: "タイトルを入力してください", class: "form-control shadow-sm" %>
        </div>
        <div class="form-group custom-file shadow-sm mt-4">
          <%= f.file_field :image, class: "custom-file-input"%>
          <%= f.label :image, "画像を選択してください", class: "custom-file-label" %>
        </div>
        <div class="send mt-5">
          <%= f.submit "送信する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-6"></div>
  </div>
</div>